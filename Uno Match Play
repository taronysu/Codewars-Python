https://www.codewars.com/kata/687dd1e199ab3955339b8071/train/python

def can_play(hand, face_up_card):
    if not hand:
        return False
    
    face_color, face_number = face_up_card.split()
    
    for card in hand:
        color, number = card.split()
        if color == face_color or number == face_number:
            return True
            
    return False
